generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  symbol    String
  type      String
  amount    Float
  price     Float
  total     Float
  date      DateTime
  createdAt DateTime @default(now())
}

model ManualAveragePrice {
  id        Int      @id @default(autoincrement())
  symbol    String   @unique
  price     Decimal
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PortfolioSnapshot {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now()) // коли зроблено знімок портфеля
  totalValue Float // загальна вартість портфеля в USD
  totalPnL   Float // прибуток або збиток у доларах
  pnlPercent Float // прибуток або збиток у відсотках
  data       Json // структура портфеля по монетах
  createdAt  DateTime @default(now()) // дата створення запису
}
