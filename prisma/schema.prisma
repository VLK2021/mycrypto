generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  symbol    String // Тікет монети, наприклад SOL або BTC
  type      String // "BUY" або "SELL"
  amount    Float // Кількість монет
  price     Float // Ціна за одиницю
  total     Float // Сума (автоматично обчислюється, коли будемо записувати)
  date      DateTime // Дата операції
  createdAt DateTime @default(now())
}
